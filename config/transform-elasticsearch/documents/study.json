{
  "document-type": "study",
  "source-entity": "study",
  "document-transform": {
    "schema:url": "{.documentationURL}",
    "schema:includedInDataCatalog": "{.source}",
    "studyName": {
      "{or}": [
        "{.studyName}",
        "{.name}"
      ]
    },
    "location": "{.locationURI => .locationName}",
    "contact": "{.contactURIs => .email + .name + .orcid }",
    "seasons": {
      "{flatten_distinct}": {
        "{or}": [
          "{.seasons.season} {.seasons.year}",
          "{.seasons.season}",
          "{.seasons.year}",
          "{.seasons}"
        ]
      }
    }
  }
}